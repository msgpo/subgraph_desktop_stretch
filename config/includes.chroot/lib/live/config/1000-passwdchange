# Script to reset password when session loads in live-mode (run only once and then delete itself)

Configure_password_change ()
{
        echo '!#/bin/sh'"\npasswd -d && rm"' $0'"\n" > /etc/gdm3/PostLogin/Default
        cp /lib/live/password.desktop /home/user/.config/autostart/
        echo '!#/bin/sh'"\nrm /home/user/.config/autostart/password.desktop\nexit 0\n" > /etc/gdm3/PostSession/Default

}


Configure_password_change

